<tr class='border-b border-slate-200'>
  <td class='px-4 py-2'><%= document.title %></td>
  <td>
    <div class='flex flex-row gap-2'>
      <%= link_to 'Show', document %>
      <%= link_to 'Edit', edit_document_path(document) %>
      <%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Download', pdf_document_path(document), target: "_blank", class: 'text-nowrap' %>
      <%= link_to 'Email', email_pdfs_document_path(document), method: :post, data: { turbo: false }, class: 'text-nowrap' %>
    </div>
  </td>
</tr>

