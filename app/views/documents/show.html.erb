<div class='h-full w-full flex flex-col gap-4'>
  <p id="notice"><%= notice %></p>

  <%= link_to 'Back', documents_path %>

  <h1 class='text-2xl'><%= @document.title %></h1>

  <div class='flex flex-row gap-2'>
    <%= link_to 'Edit', edit_document_path(@document), class: 'bg-slate-950 text-slate-100 px-2 py-1 rounded-md no-underline' %>
    <%= link_to 'Download', pdf_document_path(@document), target: "_blank", class: 'bg-slate-950 text-slate-100 px-2 py-1 rounded-md no-underline' %>
  </div>

  <div class='min-h-[500px] w-full min-w-[650px] flex justify-center bg-slate-200 py-6'>
    <%= @document.content.body.to_s.html_safe %>
  </div>
</div>

